{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file (Linux GCC)",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I${workspaceFolder}/src",
                "-I${workspaceFolder}/src/cli",
                "-I${workspaceFolder}/src/c-api",
                "-I${workspaceFolder}/src/internal",
                "-pedantic",
                "-Og",
                "-g"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
